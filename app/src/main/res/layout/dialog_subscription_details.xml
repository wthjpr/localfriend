<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/img_close"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:foregroundGravity="right"
        android:padding="15dp"
        android:src="@drawable/close" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_close"
        android:orientation="vertical">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dim_15"
            android:paddingRight="@dimen/dim_15">

            <TextView
                android:id="@+id/txt_packageType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pt_regular"
                android:padding="5dp"
                android:text="Package Type"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/txt_pkgCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Price"
                android:fontFamily="@font/pt_regular"
                android:padding="5dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/txt_startDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_packageType"
                android:text="25/04/2018"
                android:fontFamily="@font/pt_regular"
                android:padding="5dp"
                android:textSize="14sp"/>


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="20dp"
            android:alpha=".5"
            android:background="@color/black"></View>


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_column="1"
                    android:layout_weight="1.5"/>
                <TextView
                    android:layout_column="2"
                    android:layout_weight="1"
                    android:text="B"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textAlignment="center"/>
                <TextView
                    android:layout_column="3"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:text="L"/>
                <TextView
                    android:layout_column="4"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:text="D"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:text="Received"
                    android:gravity="center"
                    android:padding="8dp"
                    android:textSize="16sp"
                    android:textColor="@color/green_bg"
                    android:layout_weight="1.5"/>
                <TextView
                    android:id="@+id/received_bf"
                    android:layout_column="2"
                    android:layout_weight="1"
                    android:text="B"
                    android:textSize="18sp"
                    android:textAlignment="center"/>
                <TextView
                    android:id="@+id/received_lunch"
                    android:layout_column="3"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:text="L"/>
                <TextView
                    android:id="@+id/received_dinner"
                    android:layout_column="4"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:text="D"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:text="Cancelled"
                    android:gravity="center"
                    android:padding="8dp"
                    android:textSize="16sp"
                    android:textColor="@color/red"
                    android:layout_weight="1.5"/>
                <TextView
                    android:id="@+id/cancelled_bf"
                    android:layout_column="2"
                    android:layout_weight="1"
                    android:text="B"
                    android:textSize="18sp"
                    android:textAlignment="center"/>
                <TextView
                    android:id="@+id/cancelled_lunch"
                    android:layout_column="3"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:text="L"/>
                <TextView
                    android:id="@+id/cancelled_dinner"
                    android:layout_column="4"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:text="D"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:text="Remaining"
                    android:gravity="center"
                    android:padding="8dp"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_weight="1.5"/>
                <TextView
                    android:id="@+id/remaining_bf"
                    android:layout_column="2"
                    android:layout_weight="1"
                    android:text="B"
                    android:textSize="18sp"
                    android:textAlignment="center"/>
                <TextView
                    android:id="@+id/remaining_lunch"
                    android:layout_column="3"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:text="L"/>
                <TextView
                    android:id="@+id/remaining_dinner"
                    android:layout_column="4"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:text="D"/>
            </TableRow>
        </TableLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="20dp"
            android:alpha=".5"
            android:background="@color/black"></View>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TableRow
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_column="1"
                android:layout_weight="2.5"/>
            <TextView
                android:layout_column="2"
                android:layout_weight="1"
                android:text="Breakfast"
                android:layout_width="0dp"
                android:textSize="16sp"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="0dp"
                android:layout_column="3"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textAlignment="center"
                android:text="Lunch"/>
            <TextView
                android:layout_column="4"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textAlignment="center"
                android:text="Dinner"/>
        </TableRow>
        </TableLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_subscription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />


    </LinearLayout>


</RelativeLayout>