<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f9">

    <ImageView
        android:id="@+id/img_close"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:foregroundGravity="right"
        android:padding="15dp"
        android:src="@drawable/close" />

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_below="@id/img_close"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:elevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_close">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dim_15"
            android:paddingRight="@dimen/dim_15">

            <TextView
                android:id="@+id/txt_packageType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pt_regular"
                android:padding="5dp"
                android:text="Package Type"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_pkgCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/pt_regular"
                android:padding="5dp"
                android:text="Price"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_startDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_packageType"
                android:fontFamily="@font/pt_regular"
                android:padding="5dp"
                android:text="25/04/2018"
                android:textSize="14sp" />


        </RelativeLayout>
            <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="20dp"
            android:alpha=".5"
            android:background="@color/black"></View>



        <TableLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_column="1"
                    android:layout_weight="1.5" />

                <TextView
                    android:layout_column="2"
                    android:layout_weight="1"
                    android:text="B"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_column="3"
                    android:layout_weight="1"
                    android:text="L"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_column="4"
                    android:layout_weight="1"
                    android:text="D"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_column="1"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Received"
                    android:textColor="@color/green_bg"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/received_bf"
                    android:layout_column="2"
                    android:layout_weight="1"
                    android:text="B"
                    android:textAlignment="center"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/received_lunch"
                    android:layout_column="3"
                    android:layout_weight="1"
                    android:text="L"
                    android:textAlignment="center"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/received_dinner"
                    android:layout_column="4"
                    android:layout_weight="1"
                    android:text="D"
                    android:textAlignment="center"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_column="1"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Cancelled"
                    android:textColor="@color/red"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/cancelled_bf"
                    android:layout_column="2"
                    android:layout_weight="1"
                    android:text="B"
                    android:textAlignment="center"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/cancelled_lunch"
                    android:layout_column="3"
                    android:layout_weight="1"
                    android:text="L"
                    android:textAlignment="center"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/cancelled_dinner"
                    android:layout_column="4"
                    android:layout_weight="1"
                    android:text="D"
                    android:textAlignment="center"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:paddingBottom="10dp">

                <TextView
                    android:layout_column="1"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Remaining"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/remaining_bf"
                    android:layout_column="2"
                    android:layout_weight="1"
                    android:text="B"
                    android:textAlignment="center"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/remaining_lunch"
                    android:layout_column="3"
                    android:layout_weight="1"
                    android:text="L"
                    android:textAlignment="center"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/remaining_dinner"
                    android:layout_column="4"
                    android:layout_weight="1"
                    android:text="D"
                    android:textAlignment="center"
                    android:textSize="18sp" />
            </TableRow>
        </TableLayout>
        </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>
        <!--<View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="20dp"
            android:alpha=".5"
            android:background="@color/black"></View>-->

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll1"
        android:elevation="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TableLayout
            android:id="@+id/table2"
            android:paddingTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_column="1"
                    android:layout_weight="2" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_column="2"
                    android:layout_weight="1"
                    android:text="Breakfast"
                    android:textAlignment="center"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_column="3"
                    android:layout_weight="1"
                    android:text="Lunch"
                    android:textAlignment="center"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_column="4"
                    android:layout_weight="1"
                    android:text="Dinner"
                    android:textAlignment="center"
                    android:textSize="16sp" />
            </TableRow>
        </TableLayout>




        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_subscription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        </LinearLayout>
    </android.support.v7.widget.CardView>




</RelativeLayout>