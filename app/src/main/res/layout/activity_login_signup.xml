<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_gradient_bg"
    android:padding="@dimen/dim_10"
    tools:context="com.localfriend.LoginSignupActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dim_50"
        android:background="@null"
        android:src="@drawable/home_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dim_15"
        android:layout_marginRight="@dimen/dim_15"
        android:layout_marginBottom="@dimen/dim_50"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner_blue"
            android:padding="@dimen/dim_10"
            android:text="Hello there, I'm your Local Friend"
            android:textColor="@color/white"
            android:textSize="@dimen/dim_14" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_15"
            android:background="@drawable/rounded_corner_blue"
            android:padding="@dimen/dim_10"
            android:text="I'm here to help you with anything , anytime"
            android:textColor="@color/white"
            android:textSize="@dimen/dim_14" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_25"
            android:background="@drawable/rounded_corner_white"
            android:gravity="center"
            android:padding="@dimen/dim_10"
            android:id="@+id/tv_lets_get_started"
            android:text="Let's get started"
            android:textColor="@color/blue_text"
            android:textSize="@dimen/dim_16" />

        <TextView
            android:id="@+id/tv_already_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/dim_25"
            android:background="@null"
            android:padding="@dimen/dim_5"
            android:text="Already have an account ? "
            android:textColor="@color/white"
            android:textSize="@dimen/dim_16" />
    </LinearLayout>
</RelativeLayout>
