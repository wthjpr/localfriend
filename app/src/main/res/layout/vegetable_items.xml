<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="240dp"
    android:background="@drawable/veg_shadow_card_cropped">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.localfriend.fonts.CustomFontPtSansText
            android:id="@+id/tv_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:textStyle="@integer/roboto_regular" />

        <com.localfriend.fonts.CustomFontPtSansText
            android:id="@+id/tv_cost_old"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_cost"
            android:paddingTop="3dp"
            android:textColor="@color/gray_text"
            android:textSize="13sp"
            app:textStyle="@integer/roboto_regular" />

        <ImageView
            android:id="@+id/img_wish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:src="@drawable/wish_deactive" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_above="@+id/tv_add_cart">

            <ImageView
                android:id="@+id/img_veg"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_centerHorizontal="true"
                android:background="@null"
                android:src="@drawable/place_holder" />

            <com.localfriend.fonts.CustomFontPtSansText
                android:id="@+id/tv_veg_name"
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_veg"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="Shimla Apple"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:textStyle="@integer/roboto_medium" />

            <com.localfriend.fonts.CustomFontPtSansText
                android:id="@+id/txt_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_veg_name"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="Shimla Apple"
                android:textColor="@color/gray_tab"
                android:textSize="13sp"
                app:textStyle="@integer/roboto_medium" />
        </RelativeLayout>

        <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="@dimen/dim_1"-->
        <!--android:layout_above="@+id/tv_add_cart"-->
        <!--android:background="@color/colorPrimaryDark" />-->

        <com.localfriend.fonts.CustomFontPtSansText
            android:id="@+id/tv_add_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:drawableLeft="@drawable/cart_new"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:padding="8dp"
            android:text="Add to cart"
            android:textColor="#49CA99"
            android:textSize="14sp"
            app:textStyle="@integer/roboto_medium" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/img_anim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true" />
</RelativeLayout>