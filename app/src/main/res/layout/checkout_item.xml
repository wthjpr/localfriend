<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <com.localfriend.fonts.CustomFontTextView
        android:id="@+id/txt_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DELIVERY TIMING"
        android:textColor="@color/gray_text_light"
        android:textSize="15sp"
        app:textStyle="@integer/roboto_medium" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        android:layout_marginRight="-10dp"
        android:layout_marginLeft="-10dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingTop="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                 >

                <com.localfriend.fonts.CustomFontTextView
                    android:id="@+id/txt_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="Total Price :- Rs 100"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:textStyle="@integer/roboto_medium" />

                <com.localfriend.fonts.CustomFontTextView
                    android:id="@+id/txt_view_items"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/img_view_items"
                    android:gravity="center_vertical"
                    android:text="View items"
                    android:padding="5dp"
                    android:textColor="@color/blue_text"
                    android:textSize="12sp"
                    app:textStyle="@integer/roboto_medium" />

                <ImageView
                    android:id="@+id/img_view_items"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:alpha=".5"
                    android:layout_marginRight="10dp"
                    android:background="@null"
                    android:src="@drawable/ic_down" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_1"
                android:background="#DEE0E0" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.localfriend.fonts.CustomFontTextView
                    android:id="@+id/select_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_vertical"
                    android:paddingTop="12dp"
                    android:paddingBottom="5dp"
                    android:text="Tomorrow, 8 AM - 10 AM"
                    android:textColor="@color/blue_text"
                    android:textSize="12sp"
                    app:textStyle="@integer/roboto_medium" />

                <ImageView
                    android:id="@+id/img_select_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/dim_5"
                    android:alpha=".5"
                    android:background="@null"
                    android:layout_marginRight="10dp"
                    android:padding="4dp"
                    android:src="@drawable/ic_down" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>