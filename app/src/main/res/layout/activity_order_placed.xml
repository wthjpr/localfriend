<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.localfriend.MoreActivity">

    <!--<include layout="@layout/toolbar_common"></include>-->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:layout_marginBottom="120dp"
        android:src="@drawable/balloon_success" />

    <com.localfriend.fonts.CustomFontPtSansText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:textStyle="@integer/roboto_bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.localfriend.fonts.CustomFontPtSansText
            android:id="@+id/txt_go_shopping"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:padding="9dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/rounded_gray_solid"
            android:textColor="@color/colorAccent"
            android:text="Keep shopping"
            android:textSize="16sp"
            app:textStyle="@integer/roboto_medium" />

        <com.localfriend.fonts.CustomFontPtSansText
            android:id="@+id/txt_track_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_above="@+id/txt_go_shopping"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/curvy_gradient_white_bg"
            android:gravity="center"
            android:padding="10dp"
            android:text="Track your order"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:textStyle="@integer/roboto_medium" />

        <com.localfriend.fonts.CustomFontPtSansText
            android:id="@+id/txt_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txt_track_order"
            android:layout_marginBottom="40dp"
            android:gravity="center_horizontal"
            android:padding="15dp"
            android:text="We will send you notification when the order will be delivered."
            android:textColor="@color/gray_tab"
            app:textStyle="@integer/roboto_medium" />

        <com.localfriend.fonts.CustomFontPtSansText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txt_notification"
            android:gravity="center_horizontal"
            android:text="Congratulations.\nYour order is accepted"
            android:textColor="@color/black"
            android:textSize="22sp"
            app:textStyle="@integer/roboto_medium" />
    </RelativeLayout>
</RelativeLayout>
