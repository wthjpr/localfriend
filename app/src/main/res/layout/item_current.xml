<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dim_15"
    android1:orientation="vertical"
    android:background="?selectableItemBackground">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dim_1"
        app:cardElevation="@dimen/dim_10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.localfriend.fonts.CustomFontTextView
                android:id="@+id/txt_order_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim_10"
                android:layout_marginTop="5dp"
                android:padding="@dimen/dim_5"
                android:text="Orderid"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:textStyle="@integer/roboto_regular" />

            <com.localfriend.fonts.CustomFontTextView
                android:id="@+id/txt_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/dim_10"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:padding="@dimen/dim_5"
                android:text="Orderid"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:textStyle="@integer/roboto_regular" />

            <com.localfriend.fonts.CustomFontTextView
                android:id="@+id/txt_items_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/txt_date"
                android:layout_marginLeft="@dimen/dim_10"
                android:layout_marginRight="10dp"
                android:textColor="@color/colorPrimaryDark"
                android:padding="@dimen/dim_5"
                android:text="Processing"
                android:textSize="14sp"
                app:textStyle="@integer/roboto_regular" />

            <com.localfriend.fonts.CustomFontTextView
                android:id="@+id/txt_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_date"
                android:layout_marginLeft="@dimen/dim_10"
                android:layout_marginRight="10dp"
                android:padding="@dimen/dim_5"
                android:text="No of items"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:textStyle="@integer/roboto_regular" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_price"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="10dp">

                <com.localfriend.fonts.CustomFontTextView
                    android:id="@+id/txt_track"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/rounded_corner_green"
                    android:paddingBottom="5dp"
                    android:paddingLeft="22dp"
                    android:paddingRight="22dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:paddingTop="5dp"
                    android:text="Track"
                    app:textStyle="@integer/roboto_regular" />

                <com.localfriend.fonts.CustomFontTextView
                    android:id="@+id/txt_view_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/txt_track"
                    android:background="@drawable/rounded_corner_green"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:text="View Details"
                    app:textStyle="@integer/roboto_regular" />

                <com.localfriend.fonts.CustomFontTextView
                    android:id="@+id/txt_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_toLeftOf="@+id/txt_track"
                    android:background="@drawable/rounded_corner_green"
                    android:paddingBottom="5dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="5dp"
                    android:text="Cancel"
                    app:textStyle="@integer/roboto_regular" />
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>