<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    android:layout_marginBottom="-1dp"
    android:layout_marginLeft="-1dp"
    android:layout_marginRight="-1dp"

    android:background="@drawable/rounded_top"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/rl_tab_1"
        android:layout_width="0dp"
        android:layout_height="?actionBarSize"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/img_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
           android:layout_marginTop="@dimen/dim_10"
            android:background="@null"

            android:src="@drawable/ic_home_active" />

        <com.localfriend.fonts.CustomFontTextView
            android:id="@+id/tv_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_home"
            android:layout_centerHorizontal="true"
            android:text="Home"

            android:textColor="#275B89"
            android:textSize="@dimen/dim_14"
            android:textStyle="bold"
            app:textStyle="@integer/roboto_medium" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_tab_2"
        android:layout_width="0dp"
        android:layout_height="?actionBarSize"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/img_tiffin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dim_10"
            android:background="@null"
            android:src="@drawable/ic_tifin" />

        <com.localfriend.fonts.CustomFontTextView
            android:id="@+id/tv_tiffin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_tiffin"
           android:layout_centerHorizontal="true"
            android:text="Tiffin"
            android:textColor="#888F8C"

            android:textSize="@dimen/dim_14"
            android:textStyle="bold"
            app:textStyle="@integer/roboto_medium" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_tab_3"
        android:layout_width="0dp"
        android:layout_height="?actionBarSize"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/img_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dim_10"
            android:background="@null"

            android:src="@drawable/ic_cart" />

        <com.localfriend.fonts.CustomFontTextView
            android:id="@+id/tv_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
            android:layout_below="@+id/img_cart"
            android:text="Cart"
            android:textColor="#888F8C"
            android:textSize="@dimen/dim_14"

            android:textStyle="bold"
            app:textStyle="@integer/roboto_medium" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_tab_4"
        android:layout_width="0dp"
        android:layout_height="?actionBarSize"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/img_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dim_10"
            android:background="@null"
            android:src="@drawable/ic_more" />

        <com.localfriend.fonts.CustomFontTextView
            android:id="@+id/tv_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
            android:layout_below="@+id/img_more"
            android:text="More"
            android:textColor="#888F8C"
            android:textSize="@dimen/dim_14"
            android:textStyle="bold"

            app:textStyle="@integer/roboto_medium" />
    </RelativeLayout>

</LinearLayout>