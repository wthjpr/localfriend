<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_bg"
    android:orientation="vertical"
    tools:context="com.localfriend.MoreActivity">

    <include layout="@layout/toolbar_common"></include>


    <com.localfriend.fonts.CustomFontTextView
        android:id="@+id/txt_leave_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:text="Leave us your valuable suggestion"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        app:textStyle="@integer/roboto_regular" />

    <EditText
        android:id="@+id/edt_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_gray"
        android:gravity="start"
        android:hint="Write your suggestion"
        android:maxLines="5"
        android:minLines="5"
        android:padding="10dp"
        android:textSize="16sp" />

    <com.localfriend.fonts.CustomFontTextView
        android:id="@+id/txt_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="@drawable/curvy_gradient_bg"
        android:paddingBottom="10dp"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        android:paddingTop="10dp"
        android:text="Submit"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:textStyle="@integer/roboto_medium" />
</LinearLayout>
