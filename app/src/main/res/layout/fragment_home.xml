<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.localfriend.fragments.HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.85"
        android:background="#ffffff">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gif_loader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/loader"
            android:src="@drawable/loader" />

        <ss.com.bannerslider.views.BannerSlider
            android:id="@+id/banner_slider1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:interval="3000" />
    </RelativeLayout>
    <!--<com.daimajia.slider.library.SliderLayout-->
    <!--android:id="@+id/slider_home_frag"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="0dp"-->
    <!--android:layout_weight="1.5"-->
    <!--android:background="#BEE9FC" />-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/home_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/lrn_discount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="@dimen/dim_10">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@null"
                        android:src="@drawable/morning_need" />

                    <com.localfriend.fonts.CustomFontPtSansText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Morning meals"
                        android:textColor="@color/gray_text"
                        android:textSize="12sp"
                        app:textStyle="@integer/roboto_medium" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lrn_tiffin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="@dimen/dim_10">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@null"
                        android:src="@drawable/tiffine_wala" />

                    <com.localfriend.fonts.CustomFontPtSansText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Tiffin wala"
                        android:textColor="@color/gray_text"
                        android:textSize="12sp"
                        app:textStyle="@integer/roboto_medium" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lrn_vegetable"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="@dimen/dim_10">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@null"
                        android:src="@drawable/vegetables" />

                    <com.localfriend.fonts.CustomFontPtSansText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Vegetable"
                        android:textColor="@color/gray_text"
                        android:textSize="12sp"
                        app:textStyle="@integer/roboto_medium" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/lrn_fruit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="@dimen/dim_10">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@null"
                        android:src="@drawable/fresh_fruits" />

                    <com.localfriend.fonts.CustomFontPtSansText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Fresh Fruits"
                        android:textColor="@color/gray_text"
                        android:textSize="12sp"
                        app:textStyle="@integer/roboto_medium" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/lrn_mithaiwala"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="@dimen/dim_10">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@null"
                        android:src="@drawable/laddo" />

                    <com.localfriend.fonts.CustomFontPtSansText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Mithai wala"
                        android:textColor="@color/gray_text"
                        android:textSize="12sp"
                        app:textStyle="@integer/roboto_medium" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lrn_food"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="@dimen/dim_10">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@null"
                        android:src="@drawable/fast_food_home" />

                    <com.localfriend.fonts.CustomFontPtSansText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Fast Food"
                        android:textColor="@color/gray_text"
                        android:textSize="12sp"
                        app:textStyle="@integer/roboto_medium" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
