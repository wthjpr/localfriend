<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECF2F2"
    android:orientation="vertical"
    tools:context="com.localfriend.fragments.ScheduleFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_above="@+id/tv_make_payment"
        android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dim_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DELIVERY ADDRESS"
            android:textSize="@dimen/dim_18" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_10"
            android:elevation="@dimen/dim_10"
            app:cardBackgroundColor="@color/white">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dim_30">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/tv_bg"
                    android:gravity="center"
                    android:paddingBottom="@dimen/dim_10"
                    android:paddingLeft="@dimen/dim_20"
                    android:paddingRight="@dimen/dim_20"
                    android:paddingTop="@dimen/dim_10"
                    android:text="      +  ADD ADDRESS       "
                    android:textSize="@dimen/dim_18" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_15"
            android:text="DELIVERY TIMING"
            android:textSize="@dimen/dim_18" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_5"
            android:elevation="@dimen/dim_10"
            app:cardBackgroundColor="@color/white">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dim_15"
    android:paddingBottom="@dimen/dim_15"
    android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dim_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Price :- Rs 100"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dim_18"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="View items"
                    android:gravity="center_vertical"
                    android:drawableRight="@drawable/ic_expand_more"
                    android:textSize="@dimen/dim_16"
                    android:textColor="@color/blue_text"
                    />
            </RelativeLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="@dimen/dim_1"
    android:background="#DEE0E0"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dim_15"
       android:layout_centerHorizontal="true"
        android:text="Tomorrow, 8 AM - 10 AM"
        android:textColor="@color/blue_text"
        android:gravity="center_vertical"
        android:textSize="@dimen/dim_18"
        />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginTop="@dimen/dim_5"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_expand_more"
            />
    </RelativeLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_10"
            android:elevation="@dimen/dim_10"
            app:cardBackgroundColor="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dim_15"
                android:paddingBottom="@dimen/dim_15"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dim_10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Price :- Rs 100"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dim_18"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="View items"
                        android:gravity="center_vertical"
                        android:drawableRight="@drawable/ic_expand_more"
                        android:textSize="@dimen/dim_16"
                        android:textColor="@color/blue_text"
                        />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim_1"
                    android:background="#DEE0E0"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/dim_15"
                        android:layout_centerHorizontal="true"
                        android:text="Tomorrow, 8 AM - 10 AM"
                        android:textColor="@color/blue_text"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/dim_18"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:layout_marginTop="@dimen/dim_5"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_expand_more"
                        />
                </RelativeLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/dim_10"
    app:cardBackgroundColor="@color/white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dim_5"
        android:paddingBottom="@dimen/dim_5"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="@dimen/dim_15"
            android:paddingBottom="@dimen/dim_15"
            android:orientation="vertical">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:text="Sub Total"
    android:textSize="@dimen/dim_18"
    android:textColor="@color/blue_text"
    />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Rs. 120"
                android:layout_marginTop="@dimen/dim_10"
                android:textSize="@dimen/dim_18"
                android:textColor="@color/black"
                />
            </LinearLayout>
        <View
            android:layout_width="@dimen/dim_1"
            android:layout_height="match_parent"
            android:background="@color/blue_text"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="@dimen/dim_15"
            android:paddingBottom="@dimen/dim_15"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Total Amount"
                android:textSize="@dimen/dim_18"
                android:textColor="@color/blue_text"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Rs. 120"
                android:layout_marginTop="@dimen/dim_10"
                android:textSize="@dimen/dim_18"
                android:textColor="@color/black"
                />
        </LinearLayout>
        <View
            android:layout_width="@dimen/dim_1"
            android:layout_height="match_parent"
            android:background="@color/blue_text"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="@dimen/dim_15"
            android:paddingBottom="@dimen/dim_15"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Promo code"
                android:layout_marginTop="@dimen/dim_10"
                android:textSize="@dimen/dim_18"

                />
        </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>
    <com.localfriend.fonts.CustomFontTextView
        android:id="@+id/tv_make_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/dim_10"
        android:background="@drawable/curvy_gradient_white_bg"
        android:gravity="center"
        android:padding="@dimen/dim_10"
        android:text="MAKE PAYMENT"
        android:textColor="@color/white"
        android:textSize="@dimen/dim_15"
        app:textStyle="@integer/roboto_medium" />
</RelativeLayout>
