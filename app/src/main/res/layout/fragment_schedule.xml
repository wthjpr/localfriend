<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECF2F2"
    android:orientation="vertical"
    tools:context="com.localfriend.fragments.ScheduleFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tv_make_payment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dim_10">

                <com.localfriend.fonts.CustomFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DELIVERY ADDRESS"
                    android:textSize="16sp"
                    app:textStyle="@integer/roboto_medium" />

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dim_10"
                    android:elevation="@dimen/dim_10"
                    app:cardBackgroundColor="@color/white">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dim_30">

                        <com.localfriend.fonts.CustomFontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@drawable/tv_bg"
                            android:gravity="center"
                            android:paddingBottom="@dimen/dim_10"
                            android:paddingLeft="@dimen/dim_20"
                            android:paddingRight="@dimen/dim_20"
                            android:paddingTop="@dimen/dim_10"
                            android:text="      +  ADD ADDRESS       "
                            android:textSize="16sp"
                            app:textStyle="@integer/roboto_medium" />
                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <com.localfriend.fonts.CustomFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dim_15"
                    android:text="DELIVERY TIMING"
                    android:textSize="16sp"
                    app:textStyle="@integer/roboto_medium" />

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dim_5"
                    android:elevation="@dimen/dim_10"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="5dp"
                        android:paddingTop="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp">

                            <com.localfriend.fonts.CustomFontTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="Total Price :- Rs 100"
                                android:textColor="@color/black"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                app:textStyle="@integer/roboto_medium" />

                            <com.localfriend.fonts.CustomFontTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:drawableRight="@drawable/ic_expand_more"
                                android:gravity="center_vertical"
                                android:text="View items"
                                android:textColor="@color/blue_text"
                                android:textSize="15sp"
                                app:textStyle="@integer/roboto_medium" />
                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dim_1"
                            android:background="#DEE0E0" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.localfriend.fonts.CustomFontTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:gravity="center_vertical"
                                android:paddingTop="@dimen/dim_15"
                                android:text="Tomorrow, 8 AM - 10 AM"
                                android:textColor="@color/blue_text"
                                android:textSize="14sp"
                                app:textStyle="@integer/roboto_medium" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginTop="@dimen/dim_5"
                                android:background="@null"
                                android:padding="4dp"
                                android:src="@drawable/ic_expand_more" />
                        </RelativeLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dim_15"
                    android:elevation="@dimen/dim_10"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="5dp"
                        android:paddingTop="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp">

                            <com.localfriend.fonts.CustomFontTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="Total Price :- Rs 100"
                                android:textColor="@color/black"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                app:textStyle="@integer/roboto_medium" />

                            <com.localfriend.fonts.CustomFontTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:drawableRight="@drawable/ic_expand_more"
                                android:gravity="center_vertical"
                                android:text="View items"
                                android:textColor="@color/blue_text"
                                android:textSize="15sp"
                                app:textStyle="@integer/roboto_medium" />
                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dim_1"
                            android:background="#DEE0E0" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.localfriend.fonts.CustomFontTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:gravity="center_vertical"
                                android:paddingTop="@dimen/dim_15"
                                android:text="Tomorrow, 8 AM - 10 AM"
                                android:textColor="@color/blue_text"
                                android:textSize="14sp"
                                app:textStyle="@integer/roboto_medium" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginTop="@dimen/dim_5"
                                android:background="@null"
                                android:padding="4dp"
                                android:src="@drawable/ic_expand_more" />
                        </RelativeLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="@dimen/dim_10"
                app:cardBackgroundColor="@color/white">


            </android.support.v7.widget.CardView>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_make_payment"
        android:background="@color/white"
        android:orientation="horizontal"
         >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <com.localfriend.fonts.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Sub Total"
                android:textColor="@color/blue_text"
                android:textSize="16sp"
                app:textStyle="@integer/roboto_regular" />

            <com.localfriend.fonts.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dim_10"
                android:text="Rs. 120"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:textStyle="@integer/roboto_regular" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/dim_1"
            android:layout_height="match_parent"
            android:background="@color/blue_text" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_5"
                android:background="@null"
                android:gravity="center"
                android:hint="Promo code"
                android:padding="5dp"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/dim_1"
            android:layout_height="match_parent"
            android:background="@color/blue_text" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <com.localfriend.fonts.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Total Amount"
                android:textColor="@color/blue_text"
                android:textSize="16sp"
                app:textStyle="@integer/roboto_regular" />

            <com.localfriend.fonts.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dim_10"
                android:text="Rs. 120"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:textStyle="@integer/roboto_regular" />
        </LinearLayout>

    </LinearLayout>

    <com.localfriend.fonts.CustomFontTextView
        android:id="@+id/tv_make_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/curvy_gradient_white_bg"
        android:gravity="center"
        android:padding="@dimen/dim_10"
        android:text="MAKE PAYMENT"
        android:textColor="@color/white"
        android:textSize="@dimen/dim_15"
        app:textStyle="@integer/roboto_medium" />
</RelativeLayout>
