<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dim_10"
    android1:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dim_10"
        android:layout_marginRight="@dimen/dim_10"
        android:orientation="vertical"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dim_1"
        app:cardElevation="@dimen/dim_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.localfriend.fonts.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim_10"
                android:layout_marginTop="@dimen/dim_10"
                android:padding="@dimen/dim_5"
                android:text="Office"
                app:textStyle="@integer/roboto_medium" />

            <com.localfriend.fonts.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim_10"
                android:padding="@dimen/dim_5"
                android:text="Kuldeep singh"
                android:textColor="@color/black"
                android:textSize="@dimen/dim_18"
                app:textStyle="@integer/roboto_medium" />

            <com.localfriend.fonts.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dim_15"
                android:layout_marginLeft="@dimen/dim_10"
                android:padding="@dimen/dim_5"
                android:text="SF - 203 JDA Flats, Nursary Circle,\nVaishali Nagar, Jaipur"
                app:textStyle="@integer/roboto_medium" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.localfriend.fonts.CustomFontTextView
            android:id="@+id/txt_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dim_10"
            android:layout_weight="1"
            android:background="@drawable/rounded_corner_green"
            android:gravity="center"
            android:padding="@dimen/dim_8"
            android:text="Edit"
            android:textColor="@color/colorPrimaryDark"
            app:textStyle="@integer/roboto_regular" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"/>

        <com.localfriend.fonts.CustomFontTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dim_10"
            android:layout_weight="1"
            android:background="@drawable/rounded_corner_green"
            android:gravity="center"
            android:padding="@dimen/dim_8"
            android:text="Delete"
            android:textColor="@color/colorPrimaryDark"
            app:textStyle="@integer/roboto_regular" />
    </LinearLayout>
</LinearLayout>