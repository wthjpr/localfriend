<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#E9EEEF"
    android:orientation="vertical"
    tools:context="com.localfriend.fragments.CartFragment">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recy_cart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tv_checkout"
       android:paddingLeft="@dimen/dim_15"
        android:paddingRight="@dimen/dim_15"
        android:layout_marginTop="?actionBarSize" />

    <com.localfriend.fonts.CustomFontTextView
        android:id="@+id/tv_checkout"
        app:textStyle="@integer/roboto_medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dim_5"
        android:layout_marginLeft="@dimen/dim_20"
        android:layout_marginRight="@dimen/dim_20"
        android:background="@drawable/curvy_gradient_bg"
        android:gravity="center"
        android:padding="@dimen/dim_8"
        android:text="Checkout"
        android:textColor="@color/white"
        android:textSize="@dimen/dim_18" />

</RelativeLayout>
