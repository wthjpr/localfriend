<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_gradient_bg"
    tools:context="com.localfriend.SignupActivityFour">

    <include layout="@layout/toolbar_common" />

    <LinearLayout
        android:id="@+id/lnr_verification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dim_10"
        android:layout_below="@+id/toolbar_common"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <com.localfriend.fonts.CustomFontTextView         app:textStyle="@integer/roboto_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your password"
            android:textColor="@color/white"
            android:textSize="@dimen/dim_18"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/signup_edt_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_10"
            android:backgroundTint="@color/white"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="@dimen/dim_16"

            />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lnr_verification"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/panda_new_with_pt_sans" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dim_15"
        android:padding="@dimen/dim_10">

        <com.localfriend.fonts.CustomFontTextView         app:textStyle="@integer/roboto_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Step 4 of 4"
            android:textColor="@color/white"
            android:textSize="@dimen/dim_18"
            android:textStyle="bold" />

        <com.localfriend.fonts.CustomFontTextView         app:textStyle="@integer/roboto_medium"
            android:id="@+id/tv_btn_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/rounded_curvy_white"
            android:gravity="center"
            android:paddingBottom="@dimen/dim_12"
            android:paddingLeft="@dimen/dim_30"
            android:paddingRight="@dimen/dim_30"
            android:paddingTop="@dimen/dim_12"
            android:text="SIGN UP"
            android:textColor="@color/blue_text"
            android:textSize="@dimen/dim_14" />
    </RelativeLayout>
</RelativeLayout>
