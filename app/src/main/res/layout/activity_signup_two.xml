<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_gradient_bg"
    android:paddingTop="@dimen/dim_10"
    tools:context="com.localfriend.SigninActivityTwo">

    <include
        layout="@layout/toolbar_common"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_common"
        android:layout_marginTop="@dimen/dim_10"
        android:orientation="vertical"
        android:padding="@dimen/dim_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome Customer Name\nEnter your Mobile Number"
            android:textColor="@color/white"
            android:textSize="@dimen/dim_18"
            android:textStyle="bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_10"
            android:backgroundTint="@color/white"
            android:inputType="phone"
            android:maxLines="1"
            android:id="@+id/edt_phone_no"
            android:textColor="@color/white"
            android:textSize="@dimen/dim_16"

            />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@null"
        android:src="@drawable/walkthroughss" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dim_15"
        android:padding="@dimen/dim_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Step 2 of 4"
            android:textColor="@color/white"
            android:textSize="@dimen/dim_18"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/rounded_curvy_white"
            android:gravity="center"
            android:id="@+id/tv_btn_signin"
            android:paddingBottom="@dimen/dim_10"
            android:paddingLeft="@dimen/dim_15"
            android:paddingRight="@dimen/dim_15"
            android:paddingTop="@dimen/dim_10"
            android:text="NEXT"

            android:textColor="@color/blue_text"
            android:textSize="@dimen/dim_18" />
    </RelativeLayout>
</RelativeLayout>
