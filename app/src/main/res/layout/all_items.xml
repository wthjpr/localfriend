<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/card_new">

    <com.localfriend.fonts.CustomFontTextView
        android:id="@+id/tv_item_cost"
        app:textStyle="@integer/roboto_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="14dp"
        android:text="Rs 20"
        android:paddingLeft="6dp"
        android:paddingTop="2dp"
        android:gravity="center"
        android:textColor="#BB5139"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/img_item"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@null"
        android:src="@drawable/bakery" />

    <com.localfriend.fonts.CustomFontTextView
        android:id="@+id/tv_item_name"
        app:textStyle="@integer/roboto_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_item"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="Veggie Burger"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <com.localfriend.fonts.CustomFontTextView
        android:id="@+id/tv_add_cart"
        app:textStyle="@integer/roboto_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_item_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:padding="6dp"
        android:drawableLeft="@drawable/cart_green"
        android:drawablePadding="@dimen/dim_7"
        android:gravity="center_vertical"
        android:text="Add To Cart"
        android:textColor="@color/black"
        android:textSize="14sp" />
</RelativeLayout>