<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/card_new">

        <TextView
            android:id="@+id/tv_item_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim_10"
            android:layout_marginTop="@dimen/dim_15"
            android:text="Rs 20"
            android:textColor="#BB5139"
            android:textSize="@dimen/dim_16" />

        <ImageView
            android:id="@+id/img_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dim_55"
            android:background="@null"
            android:src="@drawable/bakery" />

        <TextView
            android:id="@+id/tv_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_item"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dim_15"
            android:text="Veggie Burger"

            android:textColor="@color/black"
            android:textSize="@dimen/dim_18" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_item_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dim_13"
            android:drawableLeft="@drawable/ic_cart"
            android:drawablePadding="@dimen/dim_10"
            android:gravity="center_vertical"
            android:text="Add To Cart"
            android:id="@+id/tv_add_cart"
            android:textColor="@color/black"
            android:textSize="@dimen/dim_18" />
    </RelativeLayout>
</android.support.v7.widget.CardView>