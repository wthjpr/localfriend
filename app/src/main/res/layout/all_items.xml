<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/card_new">

    <com.localfriend.fonts.CustomFontTextView
        android:id="@+id/tv_item_cost"
        app:textStyle="@integer/roboto_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dim_10"
        android:layout_marginTop="@dimen/dim_15"
        android:text="Rs 20"
        android:paddingLeft="6dp"
        android:paddingTop="2dp"
        android:gravity="center"
        android:textColor="#BB5139"
        android:textSize="@dimen/dim_14" />

    <ImageView
        android:id="@+id/img_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dim_55"
        android:background="@null"
        android:src="@drawable/bakery" />

    <com.localfriend.fonts.CustomFontTextView
        android:id="@+id/tv_item_name"
        app:textStyle="@integer/roboto_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_item"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dim_14"
        android:text="Veggie Burger"
        android:textColor="@color/black"
        android:textSize="@dimen/dim_15" />

    <com.localfriend.fonts.CustomFontTextView
        android:id="@+id/tv_add_cart"
        app:textStyle="@integer/roboto_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_item_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dim_20"
        android:drawableLeft="@drawable/ic_cart_new"
        android:drawablePadding="@dimen/dim_7"
        android:gravity="center_vertical"
        android:text="Add To Cart"
        android:textColor="@color/black"
        android:textSize="@dimen/dim_14" />
</RelativeLayout>