<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="@dimen/dim_12"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/dim_5"
    app:cardElevation="@dimen/dim_10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="right|top"
            android:alpha=".5"
            android:background="@null"
            android:padding="5dp"
            android:src="@drawable/button_delete_big" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dim_5">

            <ImageView
                android:id="@+id/img_food"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:background="@null"
                android:src="@drawable/place_holder"
                android:scaleType="centerInside" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/img_food"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dim_10"
                android:paddingLeft="@dimen/dim_10"
                android:paddingRight="@dimen/dim_10">

                <com.localfriend.fonts.CustomFontTextView
                    android:id="@+id/tv_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Veggie Burger"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:textStyle="@integer/roboto_medium" />

                <com.localfriend.fonts.CustomFontTextView
                    android:id="@+id/tv_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_item_name"
                    android:layout_marginTop="5dp"
                    android:text="Rs 100"
                    android:textColor="@color/gray_tab"
                    android:textSize="14sp"
                    app:textStyle="@integer/roboto_medium" />

                <com.localfriend.fonts.CustomFontTextView
                    android:id="@+id/tv_item_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_unit"
                    android:layout_marginTop="5dp"
                    android:text="Rs 100"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:textStyle="@integer/roboto_medium" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/tv_item_cost"
                    android:layout_marginTop="5dp">

                    <com.localfriend.fonts.CustomFontTextView
                        android:id="@+id/tv_move_to_cart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/rounded_corner_green"
                        android:gravity="center"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:text="Move to cart"
                        android:textSize="14sp"
                        app:textStyle="@integer/roboto_medium" />

                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>