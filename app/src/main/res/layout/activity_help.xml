<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_bg"
    android:orientation="vertical"
    tools:context="com.localfriend.MoreActivity">

    <include layout="@layout/toolbar_common"></include>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:padding="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="2dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.localfriend.fonts.CustomFontPtSansText
                android:id="@+id/txt_contact_us"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Contact Us"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                app:textStyle="@integer/roboto_medium" />

            <com.localfriend.fonts.CustomFontPtSansText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="Local Friend"
                android:textColor="#33B38D"
                android:textSize="30sp"
                app:textStyle="@integer/roboto_bold" />

            <!--<com.localfriend.fonts.CustomFontTextView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:gravity="center"-->
            <!--android:padding="10dp"-->
            <!--android:text="Contact Person : Digvijay Singh"-->
            <!--android:textColor="@color/gray_tab"-->
            <!--android:textSize="15sp"-->
            <!--app:textStyle="@integer/roboto_medium" />-->

            <com.localfriend.fonts.CustomFontPtSansText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="Contact No. : +91-9667536664"
                android:textColor="@color/gray_tab"
                android:textSize="15sp"
                app:textStyle="@integer/roboto_medium" />

            <com.localfriend.fonts.CustomFontPtSansText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:padding="10dp"
                android:text="Email : info@localfriend.in"
                android:textColor="@color/gray_tab"
                android:textSize="15sp"
                app:textStyle="@integer/roboto_medium" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <com.localfriend.fonts.CustomFontPtSansText
        android:id="@+id/txt_leave_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        app:textStyle="@integer/roboto_medium"
        android:text="Leave us a question"
        android:textSize="16sp" />

    <com.localfriend.fonts.CustomFontPtSansEditText                app:textStyle="@integer/roboto_medium"
        android:id="@+id/edt_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_gray"
        android:gravity="start"
        android:hint="Leave us a Question"
        android:maxLines="5"
        android:minLines="5"
        android:padding="10dp"
        android:textSize="16sp" />

    <com.localfriend.fonts.CustomFontPtSansText
        android:id="@+id/txt_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/curvy_gradient_bg"
        android:paddingBottom="8dp"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        android:paddingTop="8dp"
        android:text="Submit"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:textStyle="@integer/roboto_medium" />
</LinearLayout>
