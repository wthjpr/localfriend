<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dim_15"
    android1:orientation="vertical"
    android:background="?selectableItemBackground">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dim_1"
        app:cardElevation="@dimen/dim_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="8dp"
            android:paddingTop="4dp"
            android:paddingRight="8dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.localfriend.fonts.CustomFontPtSansText
                    android:id="@+id/txt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim_10"
                    android:layout_marginTop="5dp"
                    android:padding="@dimen/dim_5"
                    android:text="Kuldeep singh"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    app:textStyle="@integer/roboto_bold" />

                <com.localfriend.fonts.CustomFontPtSansText
                    android:id="@+id/txt_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="5dp"
                    android:padding="@dimen/dim_5"
                    android:text="Rs. 3000/mo"
                    android:textColor="@color/monthlyPriceColor"
                    android:textSize="14sp"
                    app:textStyle="@integer/roboto_bold" />
            </RelativeLayout>

            <com.localfriend.fonts.CustomFontPtSansText
                android:id="@+id/txt_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim_10"
                android:alpha="0.7"
                android:padding="@dimen/dim_5"
                android:text="SF - 203 JDA Flats, Nursary Circle,\nVaishali Nagar, Jaipur"
                android:textColor="@color/gray_tab"
                android:textSize="14sp"
                app:textStyle="@integer/roboto_medium" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <com.localfriend.fonts.CustomFontPtSansText
                    android:id="@+id/txt_weekly_menu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dim_10"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corner_green"
                    android:gravity="center"
                    android:padding="6dp"
                    android:visibility="invisible"
                    android:text="Weekly Menu"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="11sp"
                    app:textStyle="@integer/roboto_bold" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".4" />

                <com.localfriend.fonts.CustomFontPtSansText
                    android:id="@+id/txt_buy_now"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dim_10"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corner_green"
                    android:gravity="center"
                    android:padding="6dp"
                    android:text="Buy Now"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="12sp"
                    app:textStyle="@integer/roboto_bold" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>